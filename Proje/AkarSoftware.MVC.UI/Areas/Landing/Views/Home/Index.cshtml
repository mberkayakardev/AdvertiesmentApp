@model List<ListProviderServiceDto>

@if (Model != null && Model.Count != 0)
{
    @for (int i = 0; i < Model?.Count; i++)
    {
        <section id="scroll">
            <div class="container px-5">
                <div class="row gx-5 align-items-center">
                    <div class="col-lg-6 @(i%2 == 0 ? "order-lg-2" : "") ">
                        <div class="p-5"><img class="img-fluid rounded-circle" src="@Model[i].ImagePath" alt="@Model[i].Title" /></div>
                    </div>
                    <div class="col-lg-6 @(i%2 == 0 ? "order-lg-1" : "")">
                        <div class="p-5">
                            <h2 class="display-4">@Model[i].Title</h2>
                            <p>@Html.Raw(Model[i].Description)</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
else
{
    <div class="alert alert-danger">
        <br />
        <strong>Servisler için bir hata meydana geldi :</strong> <br> @TempData["Messages"]
        <br />
    </div>
}

